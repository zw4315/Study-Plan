using namespace std;
int main(){
    
    string Xingqi;
    int year, month,date,day,NdaysOfMonth,pickedindex ;
    int YMD[365][3];
    string Dayofweek[365];
   string content[365];
   string element;
    char buff[1024];
    // --------------------------------------------------------------------------------------------------
    ifstream in("log.txt");
    string(s);
    while(getline(in,s)){
        stringstream strm(s);
        static int i = 0;
        strm >> year >> month >> date>> buff;
        //cout << year << " "<<month <<" "<< date<<endl;
        YMD[i][0] = year;
        YMD[i][1] = month;
        YMD[i][2] = date;
        element = buff;
        content[i] = element;
        
        element.clear();
        i++;
    }
